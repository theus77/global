<div class="image-box">
	<a href="{{ url|raw }}">
		<figure>
			<noscript>
				<img src="{{ url('thumbImage', { ouuid: ouuid } ) }}"
					alt="{{ name }}" />
			</noscript>

			{% set homepageUrl = url('homepage') %}
			
			<img src="{{ asset('img/'~app.request.locale~'/loading/thumb.jpg') }}" alt="{{ name }}"
				data-original="{{url('thumbImage', { ouuid: ouuid })|replace({(homepageUrl): imageServer}) }}"
				class="img-responsive lazy" width="320" height="320" />
		</figure>
	</a>
	<div class="caption">{{ name }} <span class="badge">{{ counter }}</span>
	</div>
</div>
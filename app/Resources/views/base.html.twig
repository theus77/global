{% trans_default_domain domain %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description"
	content="{% block meta %}{{ 'homepage.meta.description'|trans }}{% endblock %} " />
<link href="{{ asset('favicon.ico')|trans|raw }}" type="image/x-icon" rel="shortcut icon" />
<title>{% block title %}{{ 'homepage.title'|trans }}{% endblock %} </title>
<!-- fontawesome css -->
<link rel="stylesheet" type="text/css"
	href="{{ asset('js/bower/components-font-awesome/css/font-awesome.min.css')|trans|raw }}" />
<!-- animate css -->
<link rel="stylesheet" type="text/css"
	href="{{ asset('css/animate/animate.min.css')|trans|raw }}" />
<!-- google font -->
<link
	href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,300'
	rel='stylesheet' type='text/css'>

<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->
<!-- Bootstrap core CSS -->
<link rel="stylesheet" type="text/css" href="/css/styles.css" />
</head>

<body id="{{ body_id }}" class="slider-background">
	<!-- Preloader 	-->
	<div id="preloader" <div id="status">&nbsp;</div></div>
	<!-- ./Preloader -->

	<!-- pattern -->
	<div id="bg_pattern"></div>
	<!-- ./pattern -->

	<!-- scrollToTop -->
	<a href="#" class="scrollToTop"> <i class="fa fa-angle-up fa-2x"></i>
	</a>
	<!-- ./scrollToTop -->
	<header class="masthead header header--fixed">
		<!-- header -->
		<header id="header">
			{% include 'elements/navbar.html.twig' %}
		</header>
		<!-- ./header -->
	</header>
	
	{% block body %}
	{% endblock %} 

	<footer id="footer">
		<div class="container">
			<ul class="list-inline">
				<li><a href="{{ 'site.phone.href'|trans|raw }}"><i class="fa fa-phone"></i>
						{{ 'site.phone.label'|trans }} </a></li>
				<li><a href="https://www.facebook.com/globalview.be"><i
						class="fa fa-facebook"></i> {{ 'site.follow_us'|trans }}</a></li>
				<li><a href="{{ 'mailto:simon@globalview.be'|trans|raw }}"><i class="fa fa-envelope-o"></i></a></li>
				<li><a href="{{ url('usage') }}"><i class="fa fa-camera"></i> {{ 'site.usage'|trans }}</a></li>
			</ul>
		</div>
	</footer>
	<!-- ./footer -->



	<script type="text/javascript"
		src="{{ asset('js/bower/jquery/jquery.min.js')|trans|raw }}"></script>
	<script type="text/javascript"
		src="{{ asset('js/bower/bootstrap-sass/assets/javascripts/bootstrap.js')|trans|raw }}"></script>
	<script type="text/javascript"
		src="{{ asset('js/bower/matchHeight/jquery.matchHeight.js')|trans|raw }}"></script>
	<script type="text/javascript"
		src="{{ asset('js/bower/jquery.lazyload/jquery.lazyload.js')|trans|raw }}"></script>
	<script type="text/javascript" src="{{ asset('js/bower/jquery-ui/jquery-ui.js')|trans|raw }}"></script>
	<script type="text/javascript"
		src="{{ asset('js/bower/simpler-sidebar/dist/jquery.simpler-sidebar.min.js')|trans|raw }}"></script>
	<script type="text/javascript"
		src="{{ asset('js/bower/smooth-scroll/dist/js/smooth-scroll.min.js')|trans|raw }}"></script>
	<script type="text/javascript"
		src="{{ asset('js/bower/jquery.nicescroll/dist/jquery.nicescroll.min.js')|trans|raw }}"></script>
	<script type="text/javascript"
		src="{{ asset('js/bower/jquery-backstretch/src/jquery.backstretch.js')|trans|raw }}"></script>
	<script type="text/javascript" src="{{ asset('js/bower/wowjs/dist/wow.min.js')|trans|raw }}"></script>
	<script type="text/javascript" src="{{ asset('js/globalview.js')|trans|raw }}"></script>
	<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
	<!-- <script src="{{ asset('js/bower/bootstrap3-ie10-viewport-bug-workaround/ie10-viewport-bug-workaround.js')|trans|raw }}"></script> -->
	<script src="{{ asset('js/ie-emulation-modes-warning.js')|trans|raw }}"></script>
	{% block javascript %}
	{% endblock %}
</body>
</html>